---
layout: layout.njk
---

<article class="post block">
  <div class="post-image">
    <img src="/static/images/blog/{{ picture }}" alt="" />
  </div>
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-header-meta">
      <p>on {{ category }}</p>
      <date>{{ date | date("YYYY / MM")}}</date>
    </div>
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
  <p class="post-picture">
    Heading picture by
    <a href="{{ pictureUrl }}" target="_blank" rel="noopener noreferrer">
      {{ pictureBy }}
    </a>
  <p>
</article>

---
layout: layout.njk
---

<article class="post block">
  <div class="post-separator" style="background: {{ background }}"></div>
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-header-meta">
      <p>on {{ category }}</p>
      <date>{{ date | date("YYYY / MM")}}</date>
    </div>
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
